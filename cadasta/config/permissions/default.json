{
  "clause": [
    {
      "effect": "allow",
      "action": ["org.list", "org.create"]
    },
    {
      "effect": "allow",
      "action": ["org.view"]
      "object": ["organization/*"],
    },

    {
      "effect": "allow",
      "action": ["project.list"],
      "object": ["organization/*"]
    },
    {
      "effect": "allow",
      "action": ["project.view"],
      "object": ["project/*/*"]
    }
  ]
}
