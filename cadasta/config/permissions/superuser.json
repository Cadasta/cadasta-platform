{
  "clause": [
    // A superuser is permitted to perform all actions on all entities
    // within the platform.
    {
      "effect": "allow",
      "action": ["org.*"]
    },
    {
      "effect": "allow",
      "action": ["org.*", "org.*.*"],
      "object": ["organization/*"]
    },

    {
      "effect": "allow",
      "action": ["project.*", "project.*.*"],
      "object": ["organization/*"]
    },
    {
      "effect": "allow",
      "action": ["project.*", "project.*.*"],
      "object": ["project/*/*"]
    },

    {
      "effect": "allow",
      "action": ["user.*"]
    },
    {
      "effect": "allow",
      "action": ["user.*"],
      "object": ["user/*"]
    }
  ]
}
